/* pages/list/list.wxss */
.rows{
  width: 100%;
  display: flex;
}

.coupon-item{
  flex: 2,
  margin: 5px 5px 0 5px;
  align-items: center;
  justify-content: center;
  background-color: #fff;

}

.coupon-item image{
    width: 100%;
    height:160px;
}

.goods-content{
  flex-grow: 1;
}

.goods-content-view{
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  height: 100%;
}

.goods-title{
  font-size: 12px;
  line-height: 18px;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  
}

.goods-price-sales{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.goods-price{
  font-size: 20px;
  padding: 4px;
  color:orangered; 
}

.goods-volume{
  font-size: 12px;
  color:darkgrey;
}

.coupon-info{
  font-size: 10px;
  color: red;
  margin-left: 5px;
}