/* pages/list/list.wxss */

.rows {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.coupon-item {
  width:45%;
  flex: 0 0 auto;
  background-color: #fff;
  padding: 0 8px;
}

.coupon-item image {
  width: 100%;
  height: 180px;
}

.goods-content {

}

.goods-content-view {
  display: flex;
  flex-direction: column;
  align-content: flex-end;
}

.goods-title {
  padding: 0 10px;
  font-size: 14px;
  line-height: 18px;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
}

.goods-price-sales {
  display: flex;
  align-items: center;
  margin-left: 3px;
  margin-top: 3px;
}

.goods-old {
  font-size: 12px;
  text-decoration: line-through;
  color: darkgray;
}

.goods-price {
  font-size: 16px;
  color:orangered;
  margin-left: 15px;
}

.goods-volume {
  font-size: 12px;
  color:darkgrey;
  padding: 0 6px;
}


