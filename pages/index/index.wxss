/* pages/index/index.wxss */

.search {
  position: fixed;
  top: 0;
  height: 50px;
  width: 100%;
  display: flex;
  align-items: center;
  background-color: burlywood;
  z-index: 3;
}

.logo {
  width: 30px;
  height: 30px;
  margin-left: 10px;
}

.search-input {
  flex-grow: 1;
  height: 15px;
  margin: 0 10px;
  padding: 5px;
  padding-right: 40px;
  border: 1px solid snow;
  border-radius: 10px;
}

.search-label {
  position: absolute;
  right: 10px;
  top: 10px;
  z-index: 4;
  padding: 5px 5px;
}

.search-img {
  width: 20px;
  height: 20px;
}

.cat{
  width: 100%;
  height: 40px;
  background: #fff;
  display: table;
}

.category-item{
  display: table-cell;
  width:10%;
  height:40px;
  padding: 4px 10px;
  vertical-align: middle;
  text-align: center;
}

.category-img{
  width:24px;
  height:24px;
}

.category-text{
  color: #D81E06;
}

.rows{
  display: flex;
}

.coupon-item{
  margin: 5px 5px 0 5px;
  align-items: center;
  justify-content: center;
  background-color: #fff;

}

.coupon-item image{
    width: 100%;
    height:160px;
}

.goods-content{
  flex-grow: 1;
}

.goods-content-view{
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  height: 100%;
}

.goods-title{
  font-size: 12px;
  line-height: 18px;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  
}

.goods-price-sales{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.goods-price{
  font-size: 20px;
  padding: 4px;
  color:orangered; 
}

.goods-volume{
  font-size: 12px;
  color:darkgrey;
}

.coupon-info{
  font-size: 10px;
  color: red;
  margin-left: 5px;
}